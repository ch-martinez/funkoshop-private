    <template id="template_item">
        <article class="item">
            <!-- Imagen del Funko -->
            <picture class="item__cover">
                <img class="item__cover-front" alt="">
                <img class="item__cover-back" alt="">
            </picture>

            <!-- Descripcion del Funko -->
            <section class="item__content">
                <span class="item__collection"></span>
                <span class="item__title"></span>
                <span class="item__description"></span>
                <span class="item__price"></span>

                <!-- Contenedor para la cantidad a agregar de items al carrito -->
                <div class="amount">
                    <input id="amount__input" class="amount__input input-hide-arrows" type="number" value="1" min="1">
                    <!-- Botones para incrementar y decrementar cantidad de items -->
                    <div class="amount__btn-container">
                        <button class="amount__btn btn--add" href="#">+</button>
                        <button class="amount__btn btn--substract" href="#">-</button>
                    </div>
                    <a class="btn-link" href="/pages/shop/cart.html">Agregar al carrito</a>
                </div>

                <!-- Ver los metodos de pago -->
